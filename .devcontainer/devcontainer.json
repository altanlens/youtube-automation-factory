{
    "name": "YouTube Automation Station",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "features": {
        "ghcr.io/devcontainers/features/github-cli:1": {}
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "dbaeumer.vscode-eslint",
                "esbenp.prettier-vscode",
                "ms-vscode.vscode-typescript-next",
                "VisualStudioExptTeam.vscodeintellicode",
                "streetsidesoftware.code-spell-checker",
                "ms-python.python",
                "ms-azuretools.vscode-docker"
            ],
            "settings": {
                "editor.formatOnSave": true,
                "editor.defaultFormatter": "esbenp.prettier-vscode",
                "typescript.tsdk": "node_modules/typescript/lib",
                "editor.codeActionsOnSave": {
                    "source.fixAll.eslint": true
                }
            }
        }
    },
    "forwardPorts": [3000, 3001, 8000],
    "postCreateCommand": "npm install --legacy-peer-deps && npm install -g @anthropic-ai/claude-code @modelcontextprotocol/server-github",
    "postStartCommand": "bash .devcontainer/setup-mcp.sh",
    "remoteUser": "node",
    "remoteEnv": {
        "GITHUB_TOKEN": "${localEnv:GITHUB_TOKEN}",
        "ANTHROPIC_API_KEY": "${localEnv:ANTHROPIC_API_KEY}"
    },
    "mounts": [
        "source=${localEnv:HOME}/.claude,target=/home/node/.claude,type=bind,consistency=cached"
    ]
}